[alias]
    cdiff = diff --cached
    merge-branch = merge --log --no-commit --no-ff
    fix-submodules = submodule update --recursive --init
    recursive = "!sh -c 'for i in . `git submodule foreach -q --recursive pwd`; do cd $i && git $@; done' -"
    recursive-sh = "!sh -c 'for i in . `git submodule foreach -q --recursive pwd`; do cd $i && $@; done' -"
    pt = !git tag -l | xargs git tag -d && git fetch -t

[branch]
    sort = -committerdate

[color]
	diff = auto
	status = auto
	branch = auto

[diff]
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[merge]
	tool = vimdiff

[push]
    followTags = true

[rerere]
	enabled = true

[include]
	path = ~/.gitconfig.private
	path = ~/.gitconfig.work
[init]
	templatedir = ~/.git-templates
[core]
	pager = less -S
[pull]
	ff = only
[http]
	cookiefile = /home/mgh/.gitcookies

[includeIf "gitdir:~/ws/twinformatics/"]
    path = ~/.gitconfig-twinformatics
