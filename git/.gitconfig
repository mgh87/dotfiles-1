[alias]

[branch]
    sort = -committerdate

[color]
	diff = auto
	status = auto
	branch = auto

[diff]
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[merge]
	tool = vimdiff

[push]
    followTags = true

[rerere]
	enabled = true

[include]
	path = ~/.gitconfig.private
	path = ~/.gitconfig.work
[init]
	templatedir = ~/.git-templates
[core]
	pager = less -S
[pull]
	ff = only
[http]
	cookiefile = /home/mgh/.gitcookies

[includeIf "gitdir:~/ws/twinformatics/"]
    path = ~/.gitconfig-twinformatics
